<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atguigu.mybatisplusdemo.mapper.UserSymptomsMapper">

    <resultMap id="BaseResultMap" type="com.atguigu.mybatisplusdemo.pojo.UserSymptoms">
            <id property="userId" column="user_id" jdbcType="INTEGER"/>
            <id property="symptomsId" column="symptoms_id" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        user_id,symptoms_id
    </sql>
    <select id="getSymptomsByUserId">
        select symptoms.*
        <include refid="Base_Column_List"/>
        from user_symptoms join symptoms on user_symptoms.symptoms_id = symptoms.id
        where user_id = #{userId}
    </select>
</mapper>
