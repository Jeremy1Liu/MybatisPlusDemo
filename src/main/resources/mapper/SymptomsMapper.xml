<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atguigu.mybatisplusdemo.mapper.SymptomsMapper">

    <resultMap id="BaseResultMap" type="com.atguigu.mybatisplusdemo.pojo.Symptoms">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="name" column="name" jdbcType="VARCHAR"/>
            <result property="description" column="description" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,name,description
    </sql>
    <delete id="deleteSymptomsByUserId">
        delete from user_symptoms
        where user_id = #{userId}
    </delete>

    <select id="getSymptomsByDiseaseId"
            resultType="com.atguigu.mybatisplusdemo.pojo.Symptoms">
        select *
        from symptoms
        where id in (
            select symptoms_id
            from disease_symptoms
            where disease_id = #{diseaseId}
        )
    </select>
    <select id="getSymptomsByDiseaseName"
            resultType="com.atguigu.mybatisplusdemo.pojo.Symptoms">
        select *
        from symptoms
        where id in (
            select symptoms_id
            from disease_symptoms
            where disease_id = (
                select id
                from disease
                where name = #{diseaseName}
            )
        )
    </select>
    <select id="getSymptomsIDsByUserId" resultType="java.lang.Integer">
        select symptoms_id
        from user_symptoms
        where user_id = #{userId}
    </select>
    <select id="getSymptomsByUserId"
            resultType="com.atguigu.mybatisplusdemo.pojo.Symptoms">
        select *
        from symptoms
        where id in (
            select symptoms_id
            from user_symptoms
            where user_id = #{userId}
        )
    </select>
</mapper>
